.sign-up-title
  %h2 Sign up

.form-box
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .form-group
      = f.label :nickname
      %br/
      = f.text_field :nickname, autofocus: true, class: "form-box-size"
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-box-size"
    .form-group
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "form-box-size"
    .form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-box-size"
    .actions
      = f.submit "Sign up", class: "btn btn btn-primary mb-2 margin-right-40"
      = render "devise/shared/links"
