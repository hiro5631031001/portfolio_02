.search-box
  .serch-box__title
    追加したい本を検索してみよう
    = form_with url: new_book_path, method: :get, local: true do |f|
      .form-group
        = f.text_field :keyword, class: ""
        = f.submit '本の題名を検索', class: ""

.book_index_wrapper
  .book_index_main
    - @books.each do |book|
      = link_to book_path(book) do
        .book_box.shadow
          .book_detail
            = image_tag book.image , alt: '', height: '120', width: '80', class: ''
          .book_detail.text-black-50
            = truncate(book.title, length: 12)
          .book_detail
            = book.user.nickname
          

