.show_book_wrapper 
  .show_book_main
    .show_book_box.shadow
      .show_book_box__left
        .book_image
          = image_tag @book.image, alt: '', height: '150', width: '100'
      .show_book_box__right
        .book_titile
          = @book.title
        .book_author
          = @book.author
        .book_publisher
          = @book.publisher
        .book_btn
          = link_to "楽天市場商品ページ",@book.url, class: 'btn btn-info btn-sm'
          = link_to book_path(@book), method: :delete, class: "btn btn-secondary btn-sm", data: { confirm: '削除しますか？' } do
            本棚から削除する
  
  .comment-form
    - if current_user
      = form_with model:[@book, @comment], local: true do |f|
        .comment-area
          = f.text_area :text, placeholder: "コメントを入力してみよう", class: "form-control"
          = f.submit "SEND",class: "btn-primary"
  
  .comments-index
    <コメント一覧>
    - @comments.each do |comment|
      .comment
        .comment__nickname
          = comment.user.nickname 
        .commnet__pause
          = ":"
        .comment__text
          = comment.text
        

    
       